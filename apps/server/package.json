{
  "name": "@ssau-schedule/server",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "db:generate": "bunx --bun prisma generate",
    "db:apply": "bunx --bun prisma migrate dev",
    "db:migrate": "bunx --bun prisma migrate deploy",
    "db:push": "bunx --bun prisma db push",
    "db:studio": "bunx --bun prisma studio",
    "build": "bun run db:generate && bun build src/index.ts --target bun --outdir ./dist",
    "dev": "bun --watch run src/index.ts",
    "prod": "bunx --bun prisma migrate deploy && bun dist/index.js",
    "lint": "bunx --bun eslint .",
    "format": "bunx --bun prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "css": "bunx --bun @tailwindcss/cli -i src/template/base.css -o src/template/timetable.css --minify",
    "css:watch": "bunx --bun @tailwindcss/cli -i src/template/base.css -o src/template/timetable.css --watch --minify",
    "build:container": "docker build -t ghcr.io/arairon/ssau-schedule -f ../../Dockerfile ../.."
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@ssau-schedule/shared": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/middie": "^9.0.3",
    "@fastify/schedule": "^6.0.0",
    "@fastify/static": "^9.0.0",
    "@grammyjs/commands": "^1.2.0",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/runner": "^2.0.3",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7",
    "@t3-oss/env-core": "^0.13.8",
    "@tma.js/init-data-node": "^2.0.5",
    "ajv-ts": "^0.9.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "croner": "^9.1.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "grammy": "^1.38.2",
    "ics": "^3.8.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prisma": "7",
    "puppeteer": "^24.19.0",
    "timestring": "^7.0.0",
    "toad-scheduler": "^3.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/cli": "^4.1.12",
    "@types/bcryptjs": "^3.0.0",
    "@types/connect": "^3.4.38",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/timestring": "^7.0.0",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}